{
  "name": "masternodeclient",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "POU - Master Node Client",
    "url": "https://github.com/Proof-Of-Uniqueness/masternode-client"
  },
  "main": "build-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && npm run transpile:preload && cross-env NODE_ENV=development electron . --no-sandbox",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project tsconfig.electron.json",
    "transpile:preload": "tsc --project tsconfig.preload.json",
    "dist:mac": "npm run transpile:electron && npm run transpile:preload && npm run build && electron-builder --mac",
    "dist:linux": "npm run transpile:electron && npm run transpile:preload && npm run build && electron-builder --linux --x64",
    "dist:win": "npm run transpile:electron && npm run transpile:preload && npm run build && electron-builder --win --x64",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "concurrently -k -s first \"npm run dev\" \"wait-on tcp:8080 && jest src/ui/utils/api/__tests__/websocket.integration.test.ts\""
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.1.3",
    "@chainsafe/libp2p-yamux": "^7.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@libp2p/interface": "^2.10.2",
    "@libp2p/mdns": "^11.0.38",
    "@libp2p/peer-id": "^5.1.5",
    "@libp2p/peer-id-factory": "^4.2.4",
    "@libp2p/tcp": "^10.1.13",
    "@libp2p/websockets": "^9.2.13",
    "@mui/material": "^6.4.8",
    "@mui/x-date-pickers": "^8.3.0",
    "@nodeutils/defaults-deep": "^1.1.0",
    "@tanstack/react-query": "^5.69.0",
    "@types/crypto-js": "^4.2.2",
    "body-parser": "^2.2.0",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "elliptic": "^6.5.4",
    "libp2p": "^2.8.8",
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.5",
    "recharts": "^2.15.1",
    "sass": "^1.85.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/body-parser": "^1.19.2",
    "@types/elliptic": "^6.4.18",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.3.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "wait-on": "^8.0.3"
  },
  "overrides": {
    "@parcel/watcher": "2.2.0"
  },
  "build": {
    "appId": "com.masternode.client",
    "files": [
      "build-electron/**/*",
      "build-react/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
